{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "generators": {
    "spec": false
  },
  "paths": {
    "@repo/config-backend": ["../../packages/backend-dependencies"],
    "@repo/config-backend-dev": ["../../packages/backend-dev-dependencies"],
    "@repo/database": ["../../packages/database"]
  }
}
