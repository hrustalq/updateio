{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "plugins": ["@nestjs/swagger"]
  },
  "generateOptions": {
    "spec": false,
    "baseDir": "modules"
  }
}
