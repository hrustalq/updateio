{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["API_URL", "DATABASE_URL", "NODE_ENV"]
    },
    "build:packages": {
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:api": {
      "dependsOn": ["build:packages"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:web": {
      "dependsOn": ["build:packages"],
      "outputs": [".next/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:migrate:dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false,
      "persistent": false
    }
  }
}
