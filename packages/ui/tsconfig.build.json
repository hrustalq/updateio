{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "paths": {
      "@repo/ui/*": ["./src/*"]
    },
    "types": ["node"]
