    "swr": "^2.2.4",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "openapi-typescript": "^6.7.4",
    "tsup": "^8.0.2"
  }
}