{
  "name": "updateio",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "infra:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "infra:down": "docker compose -f infrastructure/docker/docker-compose.yml down",
    "infra:clean": "docker compose -f infrastructure/docker/docker-compose.yml down -v",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "pnpm --filter @repo/database studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}
